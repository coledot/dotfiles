[user]
	name = Cole Thompson
	email = cole@inigral.com
[core]
	# TODO gvim if ui available
	editor = vim -f

[color]
	ui = auto
	branch = auto
	diff = auto
	status = auto
[color "branch"]
	current = yellow reverse
	local = yellow
	remote = green
[color "diff"]
	meta = yellow bold
	frag = magenta bold
	old = red bold
	new = green bold
[color "status"]
	added = yellow
	changed = green
	untracked = cyan

[apply]
	whitespace = nowarn

[push]
	default = simple

[alias]
	aa = add --all
	st = status
	stat = status
	co = checkout
	br = branch
	#ci = commit
	com = commit
	#df = difftool
	#mg = merge
	#me = merge
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %C(green)(%cr, %cd) %C(bold blue)<%an>%Creset' --abbrev-commit --date=short
	#lol = log --graph --decorate --pretty=oneline --abbrev-commit
	#lola = log --graph --decorate --pretty=oneline --abbrev-commit --all
	dfls = diff --name-only

[diff]
	tool = vim-wrapper-script
	algorithm = patience

[difftool "vim-wrapper-script"]
	cmd = ~/scripts/git_vimdiff_wrapper.sh $LOCAL $REMOTE

[difftool]
	prompt = false

