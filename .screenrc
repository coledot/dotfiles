startup_message off
autodetach on

hardstatus alwayslastline "%-Lw%{= BW}%50>%n%f* %t%{-}%+Lw%< %=%D %d %M %c"

vbell off

defscrollback 100000

bind k focus up
bind ^k focus up
bind j focus down
bind ^j focus down

bind r resize
bind ^r resize

#term screen-256color
attrcolor b ".I"
termcapinfo xterm 'Co#256:AB=\E[48;5;%dm:AF=\E[38;5;%dm'
defbce on

# needed to get rvm to work properly
shell -${SHELL}

